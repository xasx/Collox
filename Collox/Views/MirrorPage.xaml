<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="Collox.Views.MirrorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:conv="using:Collox.Common.Converters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:Collox.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:Collox.ViewModels"
      Background="Transparent"
      Loaded="Page_Loaded"
      mc:Ignorable="d">

    <Page.Resources>
        <conv:TimeSpanToFriendlyConverter x:Key="tsConv" />
    </Page.Resources>
    <Grid RowDefinitions="Auto,*">
        <!--<TitleBar x:Name="TitleBar"
                  Title="{x:Bind dev:ProcessInfoHelper.ProductName}"
                  IconSource="{dev:FontIconSource GlyphCode=E8F2}"
                  Subtitle="Mirror" />-->
        <ListView x:Name="MirrorListView"
                  Grid.Row="1"
                  ItemsSource="{x:Bind ViewModel.Messages, Mode=OneWay}"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:TextColloxMessage">
                    <StackPanel VerticalAlignment="Bottom"
                                Orientation="Horizontal">
                        <TextBlock Margin="10,0,0,0"
                                   VerticalAlignment="Bottom"
                                   Text="{x:Bind RelativeTimestamp, Mode=OneWay, Converter={StaticResource tsConv}}" />
                        <TextBlock Margin="10,0,0,0"
                                   FontSize="28"
                                   Text="{x:Bind Text}" />
                        <TextBlock Margin="10,0,0,0"
                                   VerticalAlignment="Bottom"
                                   Text="{x:Bind Context}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
