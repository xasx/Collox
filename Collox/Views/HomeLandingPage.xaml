<?xml version="1.0" encoding="utf-8" ?>

<Page x:Class="Collox.Views.HomeLandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="using:CommunityToolkit.WinUI.Converters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:Collox"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:Collox.Views"
      xmlns:vm="using:Collox.ViewModels"
      Loaded="Page_Loaded"
      mc:Ignorable="d">

    <Page.Resources>
        <converters:StringVisibilityConverter x:Key="StringVisibilityConverter" />

        <Storyboard x:Name="PageLoadStoryboard">
            <!--  Header slides in from top  -->
            <DoubleAnimation EnableDependentAnimation="True"
                             Storyboard.TargetName="HeaderTransform"
                             Storyboard.TargetProperty="Y"
                             From="-100"
                             To="0"
                             Duration="0:0:0.8">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="0.3"
                              EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation Storyboard.TargetName="PageHeader"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.8" />

            <!--  Welcome card slides in from LEFT  -->
            <DoubleAnimation BeginTime="0:0:0.2"
                             EnableDependentAnimation="True"
                             Storyboard.TargetName="WelcomeCardTransform"
                             Storyboard.TargetProperty="X"
                             From="-400"
                             To="0"
                             Duration="0:0:0.7">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="0.4"
                              EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation BeginTime="0:0:0.2"
                             Storyboard.TargetName="WelcomeCard"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.7" />

            <!--  Setup card slides in from RIGHT  -->
            <DoubleAnimation BeginTime="0:0:0.4"
                             EnableDependentAnimation="True"
                             Storyboard.TargetName="SetupCardTransform"
                             Storyboard.TargetProperty="X"
                             From="400"
                             To="0"
                             Duration="0:0:0.7">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="0.4"
                              EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation BeginTime="0:0:0.4"
                             Storyboard.TargetName="SetupCard"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.7" />
        </Storyboard>
    </Page.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <dev:OverviewPageHeader x:Name="PageHeader"
                                Title="Collox"
                                Grid.Row="0"
                                Background="{ThemeResource CardGradient2Brush}"
                                Description="Communicate again."
                                Opacity="0"
                                RenderTransformOrigin="0.5,0.5">
            <dev:OverviewPageHeader.RenderTransform>
                <TranslateTransform x:Name="HeaderTransform" Y="-100" />
            </dev:OverviewPageHeader.RenderTransform>

            <dev:OverviewPageHeader.ActionContent>
                <Button AutomationProperties.Name="Info"
                        Command="{x:Bind local:App.Current.NavigationService.NavigateToCommand}"
                        CommandParameter="{dev:NavigationParameter PageType=views:SystemInformationPage,
                                                                   BreadCrumbHeader='System Information'}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="8">
                            <FontIcon FontSize="16"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                      Glyph="&#xE7C3;" />
                            <TextBlock Text="Info" />
                        </StackPanel>
                    </Button.Content>

                </Button>
            </dev:OverviewPageHeader.ActionContent>
            <dev:OverviewPageHeader.ImageContent>
                <Grid Margin="24,8,24,16">
                    <Grid Margin="0,62,0,0"
                          Padding="16"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Style="{StaticResource GlassAcrylicGridStyle}">
                        <Image Width="56"
                               Source="ms-appx:///Assets/Store/StoreLogo.scale-400.png" />
                    </Grid>

                    <Grid Margin="48,166,0,0"
                          Padding="8"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Style="{StaticResource GlassAcrylicGridStyle}">
                        <FontIcon FontSize="24"
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                  Glyph="&#xE8F2;" />
                    </Grid>

                    <Grid Margin="104,96,0,0"
                          Padding="16"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Style="{StaticResource GlassAcrylicGridStyle}">
                        <FontIcon FontSize="48"
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                  Glyph="&#xE99A;" />
                    </Grid>
                    <Grid Margin="104,12,0,0"
                          Padding="16"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Style="{StaticResource GlassAcrylicGridStyle}">
                        <FontIcon FontSize="36"
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                  Glyph="&#xE92E;" />
                    </Grid>
                    <Grid Margin="54,14,0,0"
                          Padding="8"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Style="{StaticResource GlassAcrylicGridStyle}">
                        <FontIcon FontSize="18"
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                  Glyph="&#xEFA9;" />
                    </Grid>
                </Grid>
            </dev:OverviewPageHeader.ImageContent>
        </dev:OverviewPageHeader>

        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="8"
                        Spacing="12">
                <dev:Card x:Name="WelcomeCard"
                          Title="Welcome"
                          Opacity="0"
                          RenderTransformOrigin="0.5,0.5">
                    <dev:Card.RenderTransform>
                        <TranslateTransform x:Name="WelcomeCardTransform" X="-400" />
                    </dev:Card.RenderTransform>
                    <TextBlock Text="Welcome to Collox!" />
                </dev:Card>

                <dev:Card x:Name="SetupCard"
                          Title="Setup"
                          Opacity="0"
                          RenderTransformOrigin="0.5,0.5">
                    <dev:Card.RenderTransform>
                        <TranslateTransform x:Name="SetupCardTransform" X="400" />
                    </dev:Card.RenderTransform>
                    <dev:StepBar AutoSelectOnItemClick="True"
                                 HeaderDisplayMode="Right"
                                 Orientation="Horizontal"
                                 ShowStepIndex="False">
                        <dev:StepBarItem>
                            <StackPanel Height="80"
                                        Style="{ThemeResource StackPanelStyle}">
                                <TextBlock Text="Define AI Providers" />
                            </StackPanel>
                        </dev:StepBarItem>
                        <dev:StepBarItem>
                            <StackPanel Height="80"
                                        Style="{ThemeResource StackPanelStyle}">
                                <TextBlock Text="Define AI processors" />
                            </StackPanel>
                        </dev:StepBarItem>
                        <dev:StepBarItem>
                            <StackPanel Height="80"
                                        Style="{ThemeResource StackPanelStyle}">
                                <TextBlock Text="Review settings" />
                            </StackPanel>
                        </dev:StepBarItem>
                        <dev:StepBarItem>
                            <StackPanel Height="80"
                                        Style="{ThemeResource StackPanelStyle}">
                                <TextBlock Text="Ready to write" />
                            </StackPanel>
                        </dev:StepBarItem>
                    </dev:StepBar>
                </dev:Card>


            </StackPanel>
        </ScrollViewer>
    </Grid>

</Page>
