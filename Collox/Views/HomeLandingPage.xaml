<?xml version="1.0" encoding="utf-8" ?>

<Page x:Class="Collox.Views.HomeLandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="using:CommunityToolkit.WinUI.Converters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:Collox.ViewModels"
      mc:Ignorable="d">

    <Page.Resources>
        <converters:StringVisibilityConverter x:Key="StringVisibilityConverter" />
    </Page.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <dev:OverviewPageHeader Title="Collox"
                                Grid.Row="0"
                                Background="{ThemeResource CardGradient2Brush}"
                                Description="Communicate again.">
            <dev:OverviewPageHeader.ActionContent>
                <Button AutomationProperties.Name="Info">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="8">
                            <FontIcon FontSize="16"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                      Glyph="&#xE7C3;" />
                            <TextBlock Text="Info" />
                        </StackPanel>
                    </Button.Content>

                </Button>
            </dev:OverviewPageHeader.ActionContent>
            <dev:OverviewPageHeader.ImageContent>
                <Grid Margin="24,8,24,16">
                    <Grid Margin="0,62,0,0"
                          Padding="16"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Style="{StaticResource GlassAcrylicGridStyle}">
                        <Image Width="56"
                               Source="ms-appx:///Assets/Store/StoreLogo.scale-400.png" />
                    </Grid>

                    <Grid Margin="48,166,0,0"
                          Padding="8"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Style="{StaticResource GlassAcrylicGridStyle}">
                        <FontIcon FontSize="24"
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                  Glyph="&#xE8F2;" />
                    </Grid>

                    <Grid Margin="104,96,0,0"
                          Padding="16"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Style="{StaticResource GlassAcrylicGridStyle}">
                        <FontIcon FontSize="48"
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                  Glyph="&#xE99A;" />
                    </Grid>
                    <Grid Margin="104,12,0,0"
                          Padding="16"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Style="{StaticResource GlassAcrylicGridStyle}">
                        <FontIcon FontSize="36"
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                  Glyph="&#xE92E;" />
                    </Grid>
                    <Grid Margin="54,14,0,0"
                          Padding="8"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Style="{StaticResource GlassAcrylicGridStyle}">
                        <FontIcon FontSize="18"
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                  Glyph="&#xEFA9;" />
                    </Grid>
                </Grid>
            </dev:OverviewPageHeader.ImageContent>
        </dev:OverviewPageHeader>

        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="8"
                        Spacing="12">
                <dev:Card Title="Welcome">
                    <TextBlock Text="Welcome to Collox!" />
                </dev:Card>

                <dev:Card Title="Setup">
                    <dev:StepBar AutoSelectOnItemClick="True"
                                 HeaderDisplayMode="Right"
                                 Orientation="Horizontal"
                                 ShowStepIndex="False">
                        <dev:StepBarItem>
                            <StackPanel Height="80"
                                        Style="{ThemeResource StackPanelStyle}">
                                <TextBlock Text="Define AI Providers" />
                            </StackPanel>
                        </dev:StepBarItem>
                        <dev:StepBarItem Content="Define AI Processors" />
                        <dev:StepBarItem Content="Revise settings" />
                        <dev:StepBarItem Content="Ready to write" />
                    </dev:StepBar>
                </dev:Card>

                <!--  Runtime Information Card  -->
                <dev:Card Title="Runtime Information">
                    <dev:Card.TitleContent>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="8">
                            <Button Command="{x:Bind ViewModel.RefreshCommand}"
                                    ToolTipService.ToolTip="Refresh">
                                <FontIcon FontSize="16"
                                          Glyph="&#xE72C;" />
                            </Button>
                            <Button Command="{x:Bind ViewModel.CopyToClipboardCommand}"
                                    ToolTipService.ToolTip="Copy to Clipboard">
                                <FontIcon FontSize="16"
                                          Glyph="&#xE8C8;" />
                            </Button>
                        </StackPanel>
                    </dev:Card.TitleContent>

                    <StackPanel Spacing="16">
                        <!--  Application Info  -->
                        <dev:SimpleSettingsGroup Header="Application">
                            <dev:SettingsCard Header="Name">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.AppName, Mode=OneWay}" />
                            </dev:SettingsCard>
                            <dev:SettingsCard Header="Version">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.AppVersion, Mode=OneWay}" />
                            </dev:SettingsCard>
                        </dev:SimpleSettingsGroup>

                        <!--  Runtime Info  -->
                        <dev:SimpleSettingsGroup Header="Runtime">
                            <dev:SettingsCard Header=".NET Version">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.RuntimeVersion, Mode=OneWay}" />
                            </dev:SettingsCard>
                            <dev:SettingsCard Header="Framework">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.FrameworkDescription, Mode=OneWay}"
                                           TextWrapping="Wrap" />
                            </dev:SettingsCard>
                            <dev:SettingsCard Header="Target Framework">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.TargetFramework, Mode=OneWay}" />
                            </dev:SettingsCard>
                        </dev:SimpleSettingsGroup>

                        <!--  System Info  -->
                        <dev:SimpleSettingsGroup Header="System">
                            <dev:SettingsCard Header="Operating System">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.OSDescription, Mode=OneWay}"
                                           TextWrapping="Wrap" />
                            </dev:SettingsCard>
                            <dev:SettingsCard Header="OS Architecture">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.OSArchitecture, Mode=OneWay}" />
                            </dev:SettingsCard>
                            <dev:SettingsCard Header="Process Architecture">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.ProcessArchitecture, Mode=OneWay}" />
                            </dev:SettingsCard>
                        </dev:SimpleSettingsGroup>
                    </StackPanel>
                </dev:Card>

                <!--  Dependencies Card  -->
                <dev:Card Title="Dependencies">
                    <StackPanel Spacing="8">
                        <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}"
                                   Text="{x:Bind ViewModel.Dependencies.Count, Mode=OneWay}">
                            <Run Text="Total Dependencies: " />
                            <Run Text="{x:Bind ViewModel.Dependencies.Count, Mode=OneWay}" />
                        </TextBlock>

                        <ListView MaxHeight="400"
                                  ItemsSource="{x:Bind ViewModel.Dependencies, Mode=OneWay}"
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="vm:DependencyInfo">
                                    <Grid Padding="8,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0"
                                                    Spacing="2">
                                            <TextBlock FontFamily="Cascadia Mono"
                                                       FontWeight="SemiBold"
                                                       Text="{x:Bind Name}" />
                                            <TextBlock FontSize="11"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       Text="{x:Bind Location}"
                                                       TextWrapping="Wrap"
                                                       Visibility="{x:Bind Location, Converter={StaticResource StringVisibilityConverter}}" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="1"
                                                    HorizontalAlignment="Right"
                                                    Spacing="2">
                                            <TextBlock HorizontalAlignment="Right"
                                                       FontFamily="Cascadia Mono"
                                                       Text="{x:Bind Version}" />
                                            <TextBlock HorizontalAlignment="Right"
                                                       FontSize="11"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                <Run Text="{x:Bind Culture}" />
                                                <Run Text=" | " />
                                                <Run Text="{x:Bind PublicKeyToken}" />
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </dev:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>

</Page>
