<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="Collox.Views.HomeLandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:Collox"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <dev:MainLandingPage HeaderImage="{ThemeResource HeaderCover}"
                         HeaderOverlayImage="{ThemeResource HeaderCover}"
                         HeaderSubtitleText="{x:Bind dev:ProcessInfoHelper.Version}"
                         HeaderText="{x:Bind dev:ProcessInfoHelper.ProductName}"
                         JsonNavigationService="{x:Bind local:App.Current.GetNavService}">
        <dev:MainLandingPage.HeaderContent>
            <StackPanel Orientation="Horizontal">
                <dev:HeaderTile Title="Collox"
                                Description="Your app to write with TTS support. Best used with an eyetracker."
                                FontSize="14">
                    <dev:HeaderTile.Source>
                        <FontIcon Glyph="&#xE8F2;" />
                    </dev:HeaderTile.Source>
                </dev:HeaderTile>
            </StackPanel>
        </dev:MainLandingPage.HeaderContent>
    </dev:MainLandingPage>
</Page>

