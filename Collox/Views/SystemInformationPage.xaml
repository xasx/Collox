<?xml version="1.0" encoding="utf-8" ?>

<Page x:Class="Collox.Views.SystemInformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="using:CommunityToolkit.WinUI.Converters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:Collox.ViewModels"
      mc:Ignorable="d">

    <Page.Resources>
        <converters:StringVisibilityConverter x:Key="StringVisibilityConverter" />
    </Page.Resources>

    <Grid dev:PanelAttach.ChildrenTransitions="EntranceThemeTransition">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <dev:SimpleSettingsGroup Grid.Row="0"
                                 Margin="0,0,0,16"
                                 Header="System Information" />

        <ScrollView Grid.Row="1">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"
                                      MinWidth="400" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*"
                                      MinWidth="400" />
                </Grid.ColumnDefinitions>

                <!--  Runtime Information Card  -->
                <dev:Card x:Name="RuntimeCard"
                          Title="Runtime Information"
                          Grid.Column="0"
                          dev:PanelAttach.ChildrenTransitions="EntranceThemeTransition">
                    <dev:Card.TitleContent>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="8">
                            <Button Command="{x:Bind ViewModel.RefreshCommand}"
                                    ToolTipService.ToolTip="Refresh">
                                <FontIcon FontSize="16"
                                          Glyph="&#xE72C;" />
                            </Button>
                            <Button Command="{x:Bind ViewModel.CopyToClipboardCommand}"
                                    ToolTipService.ToolTip="Copy to Clipboard">
                                <FontIcon FontSize="16"
                                          Glyph="&#xE8C8;" />
                            </Button>
                        </StackPanel>
                    </dev:Card.TitleContent>

                    <StackPanel dev:PanelAttach.ChildrenTransitions="EntranceThemeTransition"
                                Spacing="16">
                        <!--  Application Info  -->
                        <dev:SimpleSettingsGroup Header="Application">
                            <dev:SettingsCard Header="Name">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.AppName, Mode=OneWay}" />
                            </dev:SettingsCard>
                            <dev:SettingsCard Header="Version">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.AppVersion, Mode=OneWay}" />
                            </dev:SettingsCard>
                        </dev:SimpleSettingsGroup>

                        <!--  Runtime Info  -->
                        <dev:SimpleSettingsGroup Header="Runtime">
                            <dev:SettingsCard Header=".NET Version">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.RuntimeVersion, Mode=OneWay}" />
                            </dev:SettingsCard>
                            <dev:SettingsCard Header="Framework">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.FrameworkDescription, Mode=OneWay}"
                                           TextWrapping="Wrap" />
                            </dev:SettingsCard>
                            <dev:SettingsCard Header="Target Framework">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.TargetFramework, Mode=OneWay}" />
                            </dev:SettingsCard>
                        </dev:SimpleSettingsGroup>

                        <!--  System Info  -->
                        <dev:SimpleSettingsGroup Header="System">
                            <dev:SettingsCard Header="Operating System">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.OSDescription, Mode=OneWay}"
                                           TextWrapping="Wrap" />
                            </dev:SettingsCard>
                            <dev:SettingsCard Header="OS Architecture">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.OSArchitecture, Mode=OneWay}" />
                            </dev:SettingsCard>
                            <dev:SettingsCard Header="Process Architecture">
                                <TextBlock FontFamily="Cascadia Mono"
                                           Text="{x:Bind ViewModel.ProcessArchitecture, Mode=OneWay}" />
                            </dev:SettingsCard>
                        </dev:SimpleSettingsGroup>
                    </StackPanel>
                </dev:Card>

                <!--  Dependencies Card  -->
                <dev:Card x:Name="DependenciesCard"
                          Title="Dependencies"
                          Grid.Column="2"
                          dev:PanelAttach.ChildrenTransitions="EntranceThemeTransition">
                    <StackPanel Spacing="8">
                        <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}">
                            <Run Text="Total Dependencies: " />
                            <Run Text="{x:Bind ViewModel.Dependencies.Count, Mode=OneWay}" />
                        </TextBlock>

                        <ListView MaxHeight="600"
                                  dev:PanelAttach.ChildrenTransitions="EntranceThemeTransition"
                                  ItemsSource="{x:Bind ViewModel.Dependencies, Mode=OneWay}"
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="vm:DependencyInfo">
                                    <Grid Padding="8,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0"
                                                    Spacing="2">
                                            <TextBlock FontFamily="Cascadia Mono"
                                                       FontWeight="SemiBold"
                                                       Text="{x:Bind Name}" />
                                            <TextBlock FontSize="11"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       Text="{x:Bind Location}"
                                                       TextWrapping="Wrap"
                                                       Visibility="{x:Bind Location, Converter={StaticResource StringVisibilityConverter}}" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="1"
                                                    HorizontalAlignment="Right"
                                                    Spacing="2">
                                            <TextBlock HorizontalAlignment="Right"
                                                       FontFamily="Cascadia Mono"
                                                       Text="{x:Bind Version}" />
                                            <TextBlock HorizontalAlignment="Right"
                                                       FontSize="11"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                <Run Text="{x:Bind Culture}" />
                                                <Run Text=" | " />
                                                <Run Text="{x:Bind PublicKeyToken}" />
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </dev:Card>
            </Grid>
        </ScrollView>
    </Grid>
</Page>
