<?xml version="1.0" encoding="utf-8" ?>

<Page x:Class="Collox.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:CommunityToolkit.WinUI.Controls"
      xmlns:conv="using:Collox.Common.Converters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:marquee="using:CommunityToolkit.Labs.WinUI.MarqueeTextRns"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:notifications="using:Windows.UI.Notifications"
      mc:Ignorable="d">

    <interactivity:Interaction.Behaviors>
        <interactivity:EventTriggerBehavior EventName="Loaded">
            <interactivity:InvokeCommandAction Command="{x:Bind ViewModel.InitCommand}" />
        </interactivity:EventTriggerBehavior>
    </interactivity:Interaction.Behaviors>

    <Page.Resources>

        <conv:VisualToSummaryStringConverter x:Key="vConv" />
        <Flyout x:Name="wfly">
            <StackPanel>

                <controls:SettingsCard Description="Use AI in-app"
                                       Header="AI">
                    <ToggleSwitch IsOn="{x:Bind ViewModel.IsAIEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>
            </StackPanel>
        </Flyout>

        <Flyout x:Name="Infofly">
            <StackPanel Width="256">
                <controls:HeaderedContentControl FontWeight="SemiBold"
                                                 Header="Current document">
                    <marquee:MarqueeText Behavior="Bouncing"
                                         Direction="Left"
                                         RepeatBehavior="Forever"
                                         Speed="32"
                                         Text="{x:Bind ViewModel.DocumentFilename, Mode=OneWay}" />
                </controls:HeaderedContentControl>
            </StackPanel>
        </Flyout>

        <Flyout x:Name="notifly">
            <ItemsView Width="336"
                       Height="512"
                       ItemsSource="{x:Bind ViewModel.UserNotifications, Mode=OneWay}">
                <ItemsView.ItemTemplate>
                    <DataTemplate x:DataType="notifications:UserNotification">
                        <ItemContainer Width="320"
                                       Margin="0,4"
                                       Padding="4">

                            <StackPanel Margin="4">
                                <dev:Divider HorizontalContentAlignment="Left"
                                             ContentPadding="0">
                                    <TextBlock FontWeight="Bold"
                                               Text="{x:Bind AppInfo.DisplayInfo.DisplayName}" />
                                </dev:Divider>
                                <TextBlock Text="{x:Bind Notification.Visual, Converter={StaticResource vConv}}"
                                           TextWrapping="WrapWholeWords" />
                            </StackPanel>

                        </ItemContainer>
                    </DataTemplate>
                </ItemsView.ItemTemplate>
            </ItemsView>
        </Flyout>

        <CommandBarFlyout x:Name="ShutdownFlyout"
                          AlwaysExpanded="True">
            <AppBarButton x:Name="PowerOffButton"
                          Click="PowerOffButton_Click"
                          Icon="{dev:FontIcon GlyphCode=E7E8}"
                          Label="Shutdown" />
            <AppBarButton x:Name="RebootButton"
                          Click="RebootButton_Click"
                          Icon="{dev:FontIcon GlyphCode=E777}"
                          Label="Reboot" />
            <AppBarButton x:Name="AbortButton"
                          Click="AbortButton_Click"
                          Icon="{dev:FontIcon GlyphCode=E711}"
                          Label="Abort" />
        </CommandBarFlyout>
    </Page.Resources>
    <Grid RowDefinitions="Auto, *">
        <TitleBar x:Name="AppTitleBar"
                  Title="{x:Bind dev:ProcessInfoHelper.ProductName}"
                  IconSource="{dev:BitmapIconSource Source=ms-appx:///Assets/Store/Square44x44Logo.altform-unplated_targetsize-256.png}"
                  IsBackButtonVisible="True"
                  IsPaneToggleButtonVisible="True"
                  Subtitle="{x:Bind dev:ProcessInfoHelper.VersionWithPrefix}">
            <TitleBar.LeftContent>
                <StackPanel Orientation="Horizontal"
                            Spacing="4">
                    <Button Flyout="{StaticResource Infofly}">
                        <FontIcon Glyph="&#xE946;" />
                    </Button>
                </StackPanel>
            </TitleBar.LeftContent>

            <TitleBar.CenterContent>
                <StackPanel Orientation="Horizontal">
                    <AutoSuggestBox MinWidth="320"
                                    VerticalAlignment="Center"
                                    PlaceholderText="Search"
                                    QueryIcon="Find"
                                    QuerySubmitted="OnQuerySubmitted"
                                    TextChanged="OnTextChanged" />
                </StackPanel>
            </TitleBar.CenterContent>

            <TitleBar.RightContent>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="ThemeButton"
                            Height="32"
                            Margin="0,0,4,0"
                            Click="ThemeButton_Click"
                            Content="{dev:FontIcon GlyphCode=E793,
                                                   FontSize=16}"
                            Style="{ThemeResource SubtleButtonStyle}"
                            ToolTipService.ToolTip="Toggle Theme" />
                    <Button x:Name="ShutdownButton"
                            Height="32"
                            Margin="0,0,4,0"
                            Content="{dev:FontIcon GlyphCode=E7E8,
                                                   FontSize=16}"
                            Flyout="{StaticResource ShutdownFlyout}"
                            Style="{ThemeResource SubtleButtonStyle}"
                            ToolTipService.ToolTip="Shutdown" />
                    <Button x:Name="WhatButton"
                            Height="32"
                            Margin="0,0,4,0"
                            Content="{dev:FontIcon GlyphCode=E77B,
                                                   FontSize=16}"
                            Flyout="{StaticResource wfly}"
                            Style="{ThemeResource SubtleButtonStyle}"
                            ToolTipService.ToolTip="What" />
                </StackPanel>
            </TitleBar.RightContent>
        </TitleBar>
        <NavigationView x:Name="NavView"
                        Grid.Row="1"
                        IsBackButtonVisible="Collapsed"
                        IsPaneToggleButtonVisible="False">
            <NavigationView.Header>
                <StackPanel>
                    <dev:BreadcrumbNavigator x:Name="BreadCrumbNav" />
                </StackPanel>
            </NavigationView.Header>
            <NavigationView.PaneFooter>
                <StackPanel Padding="8"
                            Orientation="Horizontal"
                            Spacing="8">
                    <dev:Shield Height="32"
                                FontSize="20"
                                Status="{x:Bind ViewModel.InternetState.State, Mode=OneWay}">
                        <FontIcon Glyph="{x:Bind ViewModel.InternetState.Icon, Mode=OneWay}" />
                    </dev:Shield>
                    <dev:Shield Height="32"
                                Click="Shield_Click"
                                FlyoutBase.AttachedFlyout="{StaticResource notifly}"
                                FontSize="20"
                                Status="{x:Bind ViewModel.UserNotifications.Count, Mode=OneWay}">
                        <FontIcon Glyph="&#xE7E7;" />
                    </dev:Shield>
                </StackPanel>
            </NavigationView.PaneFooter>
            <Frame x:Name="NavFrame" />
        </NavigationView>
    </Grid>
</Page>
